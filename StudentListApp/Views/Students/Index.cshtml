@{

}
@model List<StudentListApp.Models.Student>

<h2>Student List</h2>

<a class="btn btn-success" href="/Students/Create">Add Student</a>

<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Course</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.Age</td>
                <td>@s.Course</td>
            </tr>
        }
    </tbody>
</table>